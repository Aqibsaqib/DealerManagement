@model DealerManagment.Models.ApplicationUser


@{
    ViewData["Title"] = "Profile";
}

<div class="row mt-3">
    <div class="col-xl-8 order-xl-1">
        <div class="card bg-secondary shadow mb-3">
            <div class="card-header bg-white border-0">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">User Profile</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
              
                    <h6 class="heading-small text-muted mb-4">User information</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                          
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label">Email address</label>
                                    <input type="email" class="form-control form-control-alternative" value="@Model.Email" readonly>
                                </div>
                            </div>
                        </div>
            
                    </div>
                    <hr class="my-4">
                    <!-- Address -->
                    <h6 class="heading-small text-muted mb-4">Dealership Information</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group focused">
                                    <label class="form-control-label">Dealership Name</label>
                                    <input class="form-control form-control-alternative" value="@Model.DealershipName" type="text" readonly>
                                    
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group focused">
                                    <label class="form-control-label">Address</label>
                                    <input class="form-control form-control-alternative" value="@Model.Street" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group focused">
                                    <label class="form-control-label">City</label>
                                    <input class="form-control form-control-alternative" value="@Model.City" readonly>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group focused">
                                    <label class="form-control-label">State</label>
                                    <input class="form-control form-control-alternative" value="@Model.State" readonly>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">Postal code</label>
                                    <input type="number" class="form-control form-control-alternative" value="@Model.Zip" readonly>

                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4">
                    <!-- Description -->
                    <div>
                        <a asp-action="Current_Inventory" asp-controller="Inventory" class="btn btn-primary">Back to Inventory</a>
                    </div>
           
            </div>
        </div>
    </div>
</div>